@model IEnumerable<dynamic>

<div class="col-md-3">
    <h2>Producten</h2>
    <div class="tab-content">
        @foreach (var category in @Model)
        {
            <div class="tab-pane fade @(category == @Model.First() ? "show active" : "")" id="@($"category-{category.CategoryId}")">
                <ul class="list-group">
                    @foreach (var product in category.Products)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @product?.Name
                            <div>
                                <button class="btn btn-primary btn-sm" onclick="addToOrder('@product?.Name', 1)">+</button>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>