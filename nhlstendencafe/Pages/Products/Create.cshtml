@page
@using nlstendencafe.Pages.Products
@model Create

<div class="row">
    <div class="col">
        <h1>Create New Product</h1>
        <form method="POST">
            <div class="form-group">
                <label asp-for="Product.Name">Name:</label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId">Category:</label>
                <select asp-for="Product.CategoryId" class="form-control">
                    <option value="">-- Select Category --</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Product.CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price">Prijs:</label>
                <input asp-for="Product.Price" class="form-control" type="number" min="0" step="0.01" />
                <span asp-validation-for="Product.Price"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <button asp-page-handler="Cancel" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>