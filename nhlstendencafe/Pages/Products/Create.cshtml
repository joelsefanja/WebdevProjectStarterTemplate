@page
@using nhlstendencafe.Models
@model nhlstendencafe.Pages.Products.Create

<div class="card w-50 m-auto mt-4">
    <div class="card-header">
        <h1>Nieuw product toevoegen</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Product.Name" class="form-label">Naam</label>
                    <input asp-for="Product.Name" class="form-control"/>
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Product.Price" class="form-label">Prijs</label>
                    <div class="input-group">
                        <span class="input-group-text">â‚¬</span>
                        <input asp-for="Product.Price" class="form-control" type="number" min="0" step="0.01" value="1.99"/>
                    </div>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="Product.CategoryId" class="form-label">Selecteer een categorie</label>
                    <select asp-for="Product.CategoryId" class="form-select">
                        @foreach (var category in @Model.Categories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Voeg product toe</button>
                <button asp-page-handler="Cancel" class="btn btn-outline-secondary">Annuleer</button>
            </div>
        </form>
    </div>
</div>
