@page "{ProductId:int}"
@model nhlstendencafe.Pages.Products.Update

<div class="row">
    <div class="col">
        <h1>Product bijwerken</h1>
        <form method="post">
            <input type="hidden" asp-for="Product.ProductId"/>
            <div class="form-group">
                <label asp-for="Product.Name">Productnaam:</label>
                <input asp-for="Product.Name" minlength="4" maxlength="64" class="form-control"/>
                <span asp-validation-for="Product.Name"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.CategoryId" class="form-label">Selecteer een categorie:</label>
                <select asp-for="Product.CategoryId" class="form-select">
                    @foreach (var category in @Model.Categories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price">Prijs:</label>
                <input asp-for="Product.Price" class="form-control" type="number" min="0" step="0.01"/>
                <span asp-validation-for="Product.Price"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Bijwerken</button>
                <button asp-page-handler="Cancel" class="btn btn-danger">Annuleren</button>
            </div>
        </form>
    </div>
</div>
